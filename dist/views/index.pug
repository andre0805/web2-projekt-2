html
    head
        title Home
        meta(name='viewport', content='width=device-width, initial-scale=1')
        style 
            include ../styles/index.css
        
    body
        if user
            nav 
                div.user-info
                    p #{user.name}
                    a(href="/logout") Logout

        h1 Articles webpage
        
        if !user
            h2 Please login or signup to read articles!
        
        ul(class='navigation-menu')
            if !user
                li: a(href='/login') Login
                li: a(href='/signup') Signup
        
        h1 Available articles
        if articles.length == 0
            h2 No articles yet!
        else
            ul
                each article in articles
                    li
                        a.article(href="/articles/"+article.id) #{article.name}
